<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_10mdp"
    android:background="@color/light_black">

    <EditText
        android:id="@+id/profile_name_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35mdp"
        android:layout_marginStart="@dimen/_15mdp"
        android:layout_marginEnd="@dimen/_15mdp"
        android:layout_marginLeft="@dimen/_15mdp"
        android:layout_marginRight="@dimen/_15mdp"
        android:drawableStart="@drawable/person_24"
        android:drawableLeft="@drawable/person_24"
        android:drawablePadding="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_30mdp"
        android:drawableRight="@drawable/ic_baseline_edit_24"
        android:drawableEnd="@drawable/ic_baseline_edit_24"
        android:hint="Name"
        android:background="@drawable/bg_btn_edt_light_purple_signup"
        android:padding="@dimen/_7mdp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_10mdp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/profile_lastName_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35mdp"
        android:background="@drawable/bg_btn_edt_light_purple_signup"
        android:layout_marginLeft="@dimen/_15mdp"
        android:layout_marginTop="@dimen/_20mdp"
        android:layout_marginRight="@dimen/_15mdp"
        android:drawableStart="@drawable/person_24"
        android:drawableLeft="@drawable/person_24"
        android:drawablePadding="@dimen/_10mdp"
        android:drawableRight="@drawable/ic_baseline_edit_24"
        android:drawableEnd="@drawable/ic_baseline_edit_24"
        android:hint="Last name"
        android:padding="@dimen/_7mdp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_10mdp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/profile_name_txt"
        app:layout_constraintStart_toStartOf="@id/profile_name_txt"
        app:layout_constraintTop_toBottomOf="@id/profile_name_txt" />

    <EditText
        android:id="@+id/profile_phoneOrEmail_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35mdp"
        android:layout_marginLeft="@dimen/_15mdp"
        android:layout_marginStart="@dimen/_15mdp"
        android:layout_marginEnd="@dimen/_15mdp"
        android:layout_marginTop="@dimen/_20mdp"
        android:layout_marginRight="@dimen/_15mdp"
        android:inputType="textEmailAddress"
        android:background="@drawable/bg_btn_edt_light_purple_signup"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawableRight="@drawable/ic_baseline_edit_24"
        android:drawableEnd="@drawable/ic_baseline_edit_24"
        android:drawablePadding="@dimen/_10mdp"
        android:hint="Phone or Email"
        android:padding="@dimen/_7mdp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_10mdp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/profile_lastName_txt"
        app:layout_constraintStart_toStartOf="@id/profile_lastName_txt"
        app:layout_constraintTop_toBottomOf="@id/profile_lastName_txt" />

    <EditText
        android:id="@+id/profile_pass_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35mdp"
        android:layout_marginLeft="@dimen/_15mdp"
        android:layout_marginStart="@dimen/_15mdp"
        android:layout_marginTop="@dimen/_20mdp"
        android:layout_marginRight="@dimen/_15mdp"
        android:layout_marginEnd="@dimen/_15mdp"
        android:inputType="textPassword"
        android:background="@drawable/bg_btn_edt_light_purple_signup"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawableRight="@drawable/ic_baseline_edit_24"
        android:drawableEnd="@drawable/ic_baseline_edit_24"
        android:drawablePadding="@dimen/_10mdp"
        android:hint="Password"
        android:padding="@dimen/_7mdp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_10mdp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/profile_phoneOrEmail_txt"
        app:layout_constraintStart_toStartOf="@id/profile_phoneOrEmail_txt"
        app:layout_constraintTop_toBottomOf="@id/profile_phoneOrEmail_txt" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gender"
        android:layout_marginTop="@dimen/_20mdp"
        android:layout_marginLeft="@dimen/_15mdp"
        android:layout_marginRight="@dimen/_15mdp"
        app:layout_constraintLeft_toLeftOf="@id/profile_pass_txt"
        app:layout_constraintStart_toStartOf="@id/profile_pass_txt"
        app:layout_constraintTop_toBottomOf="@id/profile_pass_txt">
        <TextView
            android:id="@+id/profile_gender_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender :"
            android:layout_marginTop="@dimen/_8mdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_12mdp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_10mdp"
            android:layout_marginRight="@dimen/_15mdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:gravity="center_vertical"
            android:id="@+id/profile_genderRadioGrp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/_15mdp"
            android:layout_marginRight="@dimen/_15mdp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/profile_gender_tv"
            app:layout_constraintStart_toEndOf="@id/profile_gender_tv"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/profile_radioBtn_Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:padding="@dimen/_5mdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_10mdp"
                android:textStyle="bold" />
            <RadioButton
                android:id="@+id/profile_radioBtn_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male"
                android:padding="@dimen/_5mdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_10mdp"
                android:textStyle="bold" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profileFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/white"
        app:srcCompat="@drawable/ic_baseline_check_24"
        app:backgroundTint="@color/purple_pink_light"
        app:layout_constraintRight_toRightOf="parent"
        app:fabSize="auto"
        app:maxImageSize="@dimen/_24mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_16mdp" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>