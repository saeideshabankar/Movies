<?xml version="1.0" encoding="utf-8"?>
<com.tistory.zladnrms.roundablelayout.RoundableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_250mdp"
    android:layout_height="wrap_content"
    app:cornerRightTop="@dimen/_7mdp"
    app:cornerLeftTop="@dimen/_7mdp"
    app:cornerRightBottom="@dimen/_7mdp"
    app:cornerLeftBottom="@dimen/_7mdp"
    android:layout_marginRight="@dimen/_5mdp">

        <com.rishabhharit.roundedimageview.RoundedImageView
            android:id="@+id/bestTopRate_frag_poster_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150mdp"
            android:scaleType="centerCrop"
           android:src="@drawable/whats"
            app:cornerRadius="@dimen/_7mdp"
            app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10mdp"
            android:paddingRight="@dimen/_20mdp"
            android:paddingBottom="@dimen/_5mdp"
            android:background="@drawable/bg_row_popular_img"
            app:layout_constraintBottom_toBottomOf="@id/bestTopRate_frag_poster_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/topRate_frag_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginRight="@dimen/_10mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_5mdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12mdp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/topRate_frag_popularity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_3mdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_5mdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12font_mdp"
                android:layout_marginRight="@dimen/_10mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                app:drawableLeftCompat="@drawable/ic_baseline_star_rate_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topRate_frag_title_txt" />


        </androidx.constraintlayout.widget.ConstraintLayout>

</com.tistory.zladnrms.roundablelayout.RoundableLayout>

