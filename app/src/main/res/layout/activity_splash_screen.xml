<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splash_screen_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black">

    <ImageView
        android:id="@+id/splash_page_logo_img"
        android:layout_width="@dimen/_120mdp"
        android:layout_height="@dimen/_90mdp"
        android:layout_marginTop="@dimen/_180mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_videocameralogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5mdp"
        android:text="Welcome to Movies app"
        android:textColor="@color/white"
        android:textSize="@dimen/_15mdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/splash_page_logo_img"
        app:layout_constraintStart_toStartOf="@id/splash_page_logo_img"
        app:layout_constraintTop_toBottomOf="@id/splash_page_logo_img" />

</androidx.constraintlayout.widget.ConstraintLayout>