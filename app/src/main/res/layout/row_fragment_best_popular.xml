<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_100mdp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_10mdp"
    android:layout_marginRight="@dimen/_10mdp"
    android:background="@drawable/bg__best_top_rated_shape">


    <com.rishabhharit.roundedimageview.RoundedImageView
        android:id="@+id/row_best_popular_posterImg"
        android:layout_width="@dimen/_100mdp"
        android:layout_height="@dimen/_110mdp"
        android:scaleType="centerCrop"
        android:src="@drawable/whats"
        app:cornerRadius="@dimen/_5mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="@dimen/_5mdp"
        android:paddingTop="@dimen/_5mdp"
        app:layout_constraintTop_toBottomOf="@id/row_best_popular_posterImg"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/row_best_popular_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10mdp"
            android:layout_marginRight="@dimen/_10mdp"
            android:layout_marginEnd="@dimen/_10mdp"
            android:layout_marginLeft="@dimen/_10mdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_8font_mdp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/row_best_popular_rated_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10mdp"
            android:layout_marginLeft="@dimen/_10mdp"
            android:layout_marginRight="@dimen/_10mdp"
            android:layout_marginEnd="@dimen/_10mdp"
            android:drawablePadding="@dimen/_3mdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_2mdp"
            android:textColor="@color/bg_txt_white"
            android:textSize="@dimen/_8font_mdp"
            app:drawableLeftCompat="@drawable/ic_baseline_star_rate_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row_best_popular_title_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>