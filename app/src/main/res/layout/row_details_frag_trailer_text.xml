<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_7mdp"
android:layout_marginRight="@dimen/_10mdp">
<TextView
    android:id="@+id/tvTrailer"
    android:background="@drawable/bg_genres"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginBottom="@dimen/_3mdp"
    android:padding="@dimen/_10mdp"
    android:textSize="@dimen/_10mdp"
    android:textColor="@color/white"
    android:maxLength="30"
    android:gravity="center"
    android:ellipsize="end"
    android:singleLine="true"
    android:maxLines="1"
    android:layout_marginRight="@dimen/_10mdp"
    android:layout_marginEnd="@dimen/_10mdp"
    app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>